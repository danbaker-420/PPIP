            <!-- SECTION 4: EXPENSING & SPEND REQUESTS (New Section) -->
            <section id="expensing-spend">
                <h2 class="collapsible searchable-item" data-target="expensing-content">
                    Expensing & Spend Requests
                    <i class="ph-minus-circle-fill text-2xl transition-transform" data-icon></i>
                </h2>
                <div id="expensing-content" class="content-section">
                    
                    <!-- UPDATED: Changed grid to 3 columns on large screens to make the expense sections line up -->
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 searchable-item">
                        
                        <!-- Subcategory 1: Core Expense & Reimbursement Policies (MODIFIED) -->
                        <!-- REMOVED lg:col-span-2 to make it take up 1 column on large screens -->
                        <div class="resource-group-box">
                            <h4 class="text-base font-bold text-gray-800 mb-3 border-b pb-1 border-gray-300">💸 Core Expense & Reimbursement Policies</h4>
                            <!-- Changed grid to 1 column on all screens, as the links fit vertically -->
                            <div class="grid grid-cols-1 gap-2 text-sm">
                                <!-- All links below already have link-style class -->
                                <a class="link-style" href="https://thecore.procore.com/pac/finance__procurement/finance__purchasing/global_travel__expense_guidelines" target="_blank" rel="noopener noreferrer">Global Travel & Expense Guidelines</a>
